#define orange        #d28445
#define yellow        #f4bf75
#define green         #90a959
#define cyan          #75b5aa
#define blue          #6a9fb5
#define magenta       #aa759f
#define brown         #8f5536


*.foreground:   lightergray
*.background:   darkestgray
*.cursorColor:  lightergray
*.color0:       darkestgray

! vim: set filetype=xdefaults :

! XFT setup for nice fonts
Xft.autohint:   true
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintlight
Xft.lcdfilter:  lcddefault

! urxvt setup
urxvt.loginShell:       true
urxvt.letterSpace :     -1.5
urxvt.lineSpace:        0
urxvt.xftAntialias:     true
urxvt.saveLines:        12000

! load plugins
urxvt.perl-ext-common:    default,matcher,font-size,notification,clipboard,gt

! fonts resizing
urxvt.keysym.C-plus:         perl:font-size:increase
urxvt.keysym.C-minus:        perl:font-size:decrease
urxvt.keysym.C-equal:        perl:font-size:reset

! urls management
urxvt.url-launcher:       /usr/bin/x-www-browser
urxvt.underlinedURLs:     true
urxvt.matcher.button:     1
urxvt.matcher.pattern.1:  \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
urxvt.cutchars:           "`()'*[]{|}""'`"

! copypaste
urxvt.copyCommand:    xclip -i -selection clipboard
urxvt.pasteCommand:   xclip -o -selection clipboard
urxvt.keysym.S-C-C:   perl:clipboard:copy
urxvt.keysym.S-C-V:   perl:clipboard:paste
urxvt.keysym.M-v:     perl:clipboard:paste_escaped

! google translate
urxvt.keysym.C-M-4:   perl:gt:zh-en
urxvt.keysym.C-M-5:   perl:gt:en-zh

! Unbreak zsh keys in URxvt
urxvt.keysym.Home:    \033[1~
urxvt.keysym.End:     \033[4~

! for irssi
urxvt.eightBitInput:      false
urxvt.metaSendsEscape:    true

! avoid ctrl-shift useless mode
urxvt.iso14755_52:      false
urxvt.iso14755:         false

urxvt.scrollBar:        false
urxvt.pointerColor:     black
urxvt.pointerColor2:    white
urxvt.borderless:       true

! fonts
urxvt.font:             xft:Meslo LG M DZ for Powerline:size=8
urxvt.boldFont:         xft:Meslo LG M DZ for Powerline:style=Bold:size=8

! notifications
urxvt.urgentOnBell:    true
urxvt.keysym.C-n:      perl:notify-toggle


! colors
! http://en.wikipedia.org/wiki/X11_color_names

urxvt.depth:            32

*.foreground:   azure
*.background:   black
*.cursorColor:  ivory

*.color0:       grey10
*.color1:       peru
*.color2:       darkseagreen3
*.color3:       lightgoldenrod2
*.color4:       steelblue
*.color5:       orange2
*.color6:       dodgerblue
*.color7:       snow

*.color8:       lemonchiffon4
*.color9:       sienna
*.color10:      palegreen3
*.color11:      goldenrod1
*.color12:      dimgrey
*.color13:      darkorange2
*.color14:      dodgerblue4
*.color15:      ivory4

